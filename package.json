{
  "name": "javascript-dojo-scaffold",
  "version": "1.0.0",
  "description": "A quick startup skeleton for JavaScript dojos generated by project-initializer: https://github.com/linesh-simplicity/project-initializer.",
  "main": "src/index.ts",
  "scripts": {
    "lint": "eslint src --ext .ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:ci": "jest --coverage --verbose"
  },
  "author": "Linesh",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.7.5",
    "@babel/plugin-proposal-class-properties": "^7.7.4",
    "@babel/plugin-proposal-decorators": "^7.7.4",
    "@babel/preset-env": "^7.7.6",
    "@types/jest": "^24.0.23",
    "@types/node": "^12.12.17",
    "@typescript-eslint/eslint-plugin": "^2.11.0",
    "@typescript-eslint/parser": "^2.11.0",
    "babel-eslint": "^10.0.3",
    "eslint": "^6.7.2",
    "eslint-config-javascript-the-good-parts": "^1.7.1",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-prettier": "^3.1.1",
    "husky": "^3.1.0",
    "jest": "^24.9.0",
    "lint-staged": "^9.5.0",
    "prettier": "^1.19.1",
    "ts-jest": "^24.2.0",
    "typescript": "^3.7.3"
  },
  "jest": {
    "testMatch": [
      "<rootDir>/src/*.test.(js|ts)"
    ],
    "transform": {
      ".js": "babel-jest",
      ".ts$": "ts-jest"
    },
    "verbose": false,
    "collectCoverage": false
  },
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5",
    "arrowParens": "always"
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ],
    "plugins": [
      [
        "@babel/plugin-proposal-decorators",
        {
          "legacy": true
        }
      ],
      [
        "@babel/plugin-proposal-class-properties",
        {
          "loose": true
        }
      ]
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged || echo 'lint failed but git commit still proceeding...'"
    }
  },
  "lint-staged": {
    "src/**/*.(js|ts)": [
      "npm run lint -- --fix",
      "git add"
    ]
  }
}